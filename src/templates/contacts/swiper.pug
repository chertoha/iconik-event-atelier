extends ../data/contact-list.pug

block contacts-swiper
    - 
        var imageBasePath = "./assets/images/contacts/";

    .contacts__swiper-wrapper
        .swiper.contacts-swiper
            .swiper-wrapper.contacts-swiper__wrapper
                each item in list   
                    .swiper-slide.contacts-swiper__item
                        .contacts-card
                            .contacts-card__img-wrapper
                                picture.contacts-card__img
                                    source(srcset= imageBasePath + item.mob_1x + " 1x," + imageBasePath + item.mob_2x + " 2x" media="(max-width: 767.98px)" type="image/jpeg")
                                    source(srcset= imageBasePath +  item.desktop_1x + " 1x," + imageBasePath + item.desktop_2x + " 2x" media="(min-width: 768px)" type="image/jpeg")
                                    img(src= imageBasePath + item.mob_1x alt=item.name loading="lazy" width="265" height="322").contacts-card__img

                            .contacts-card__meta
                                h3.contacts-card__name  #{item.name}
                                p.contacts-card__position #{item.position}

        button(type="button").button.swiper-button-prev.swiper-prev.contacts__swiper-prev.js-contacts-prev
            svg(width="36" height="36").icon
                use(href="./assets/images/icons.svg#prev-arrow") 
        button(type="button").button.swiper-button-next.swiper-next.contacts__swiper-next.js-contacts-next
            svg(width="36" height="36").icon
                use(href="./assets/images/icons.svg#next-arrow") 