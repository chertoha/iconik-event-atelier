extends ../data/offer-list.pug 

block membership-list
    ul.membership__list.js-offer-card-list
        each item in list
            li.membership__item
                a(href="" class=item.isVIP ? "offer-card--lightmode" : "").link.offer-card.js-offer-card
                    h3(class=item.isVIP ? "offer-card__title--lightmode" : "").offer-card__title #{item.title}
                    .offer-card__articles-wrapper   
                        ul.article-list
                            each article in item.mainItems
                                li.article.article-list__item
                                    svg.icon.article__icon
                                        use(href="./assets/images/icons.svg#checkmark")
                                    p(class=item.isVIP ? "article__text--lightmode" : "").article__text #{article}

                        ul.article-list.js-hidden-article-list
                            each article in item.extraItems
                                li.article.article-list__item
                                    svg.icon.article__icon.article__icon--extra
                                        use(href="./assets/images/icons.svg#checkmark")
                                    p.article__text.article__text--extra #{article}

                    button(type="button" class=item.isVIP ? "offer-card__view-all-btn--lightmode" : "").button.offer-card__view-all-btn.js-offer-view-all-btn
                        svg(width="16" height="16" style="display:none").icon.js-offer-view-all-btn-minus-icon
                            use(href="./assets/images/icons.svg#minus-icon")
                        svg(width="16" height="16" style="display:block").icon.js-offer-view-all-btn-add-icon
                            use(href="./assets/images/icons.svg#add-icon")
                        span.offer-card__view-all-btn-text.js-offer-view-all-btn-text  VIEW ALL FEATURES    

                    a(href="#request-form").link.button.button--accent.offer-card-cta-btn.js-cta-btn Get a consultation
